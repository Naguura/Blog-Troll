
    <div class="column is-full">
      <h1 class=" subtitle is-3"> Articles</h1>

      <% @articles.each do |article| %>
      <div class="media-content">
          <div class="content">
            <strong> <%= article.title %> </strong></br>
            <Small> <%= article.description %> </small>
              <nav class="level-left is-mobile">
                  <%= link_to article, class: "level-item" do%>
                      <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                  <% end %>   

                  <%= link_to edit_article_path(article), class: "level-item" do%>
                      <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i> </span>
                  <% end %>  

                  <%= link_to article, method: :delete, data: {confirm: "Are u sure?" } do %>
                      <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i> </span>
                  <% end %>        
              </nav>               
          </div>
      </div> 
      <% end %>
    </div>
